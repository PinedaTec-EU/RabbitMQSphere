@page "/"
@inject ArticleService ArticleService
@inject IStringLocalizer<Shared> Localizer
@rendermode InteractiveServer

<PageTitle>PinedaTec - @Localizer["Home"]</PageTitle>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <h1>@Localizer["WelcomeTitle"]</h1>
        <p>@Localizer["WelcomeSubtitle"]</p>
    </div>
</section>

<!-- Articles Section -->
<section class="container mb-5">
    <h2 class="text-center mb-4">@Localizer["LatestArticles"]</h2>
    
    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (articles != null && articles.Items.Any())
    {
        <div class="row g-4">
            @foreach (var article in articles.Items)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card card-pineda h-100">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@article.Title</h5>
                            <p class="text-muted small">
                                <i class="far fa-calendar me-1"></i>
                                @Localizer["PublishedOn"] @article.PublishedDate.ToString("MMM dd, yyyy")
                            </p>
                            <p class="card-text flex-grow-1">@article.Excerpt</p>
                            <div class="mb-3">
                                @foreach (var tag in article.Tags.Take(3))
                                {
                                    <span class="badge me-1">@tag</span>
                                }
                            </div>
                            <a href="@article.Url" target="_blank" class="btn btn-primary btn-sm mt-auto" rel="noopener noreferrer">
                                @Localizer["ReadMore"] <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination pagination-pineda">
                <li class="page-item @(articles.HasPreviousPage ? "" : "disabled")">
                    <button class="page-link" @onclick="PreviousPage" disabled="@(!articles.HasPreviousPage)">
                        <i class="fas fa-chevron-left me-1"></i>@Localizer["Previous"]
                    </button>
                </li>
                <li class="page-item active">
                    <span class="page-link">
                        @Localizer["Page"] @articles.CurrentPage @Localizer["Of"] @articles.TotalPages
                    </span>
                </li>
                <li class="page-item @(articles.HasNextPage ? "" : "disabled")">
                    <button class="page-link" @onclick="NextPage" disabled="@(!articles.HasNextPage)">
                        @Localizer["Next"]<i class="fas fa-chevron-right ms-1"></i>
                    </button>
                </li>
            </ul>
        </nav>
    }
    else
    {
        <div class="alert alert-info text-center">
            No articles available.
        </div>
    }
</section>

@code {
    private PagedResult<Article>? articles;
    private int currentPage = 1;
    private const int pageSize = 6;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadArticles();
    }

    private async Task LoadArticles()
    {
        isLoading = true;
        articles = await ArticleService.GetArticlesAsync(currentPage, pageSize);
        isLoading = false;
    }

    private async Task NextPage()
    {
        if (articles?.HasNextPage == true)
        {
            currentPage++;
            await LoadArticles();
        }
    }

    private async Task PreviousPage()
    {
        if (articles?.HasPreviousPage == true)
        {
            currentPage--;
            await LoadArticles();
        }
    }
}
