@inject IJSRuntime JSRuntime
@implements IAsyncDisposable

<div class="terminal-container @(IsCollapsed ? "collapsed" : "")">
    <div class="terminal-header" @onclick="ToggleCollapse">
        <span class="terminal-title">
            <i class="fas fa-terminal me-2"></i>System Console
        </span>
        <button class="terminal-toggle-btn" aria-label="Toggle terminal">
            <i class="fas @(IsCollapsed ? "fa-chevron-down" : "fa-chevron-up")"></i>
        </button>
    </div>
    
    @if (!IsCollapsed)
    {
        <div class="terminal-body" id="terminal-output">
            @foreach (var line in DisplayedLines)
            {
                <div class="terminal-line @GetLineClass(line.Type)">
                    @if (line.Type == "loading")
                    {
                        <span class="terminal-prompt">&gt;</span>
                    }
                    else if (line.Type == "success")
                    {
                        <span class="terminal-check">âœ“</span>
                    }
                    <span>@line.Text</span>
                </div>
            }
        </div>
    }
</div>

@code {
    private class TerminalLine
    {
        public string Text { get; set; } = string.Empty;
        public string Type { get; set; } = "normal"; // normal, loading, success
        public int Delay { get; set; }
    }

    private List<TerminalLine> AllLines = new()
    {
        new TerminalLine { Text = "Reasoning agent (Ollama) ready", Type = "loading", Delay = 500 },
        new TerminalLine { Text = "SmartDoku activated", Type = "success", Delay = 800 },
        new TerminalLine { Text = "MongoDB linked", Type = "success", Delay = 600 },
        new TerminalLine { Text = "Observability layer online", Type = "success", Delay = 700 },
        new TerminalLine { Text = "Fetching articles from the cloud...", Type = "loading", Delay = 1000 },
        new TerminalLine { Text = "System initialized successfully.", Type = "success", Delay = 500 },
        new TerminalLine { Text = "You can now explore the latest articles and insights.", Type = "success", Delay = 300 }
    };

    private List<TerminalLine> DisplayedLines = new();
    private bool IsCollapsed = false;
    private bool AnimationComplete = false;
    private CancellationTokenSource? _cancellationTokenSource;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await AnimateTerminal();
        }
    }

    private async Task AnimateTerminal()
    {
        _cancellationTokenSource = new CancellationTokenSource();
        
        try
        {
            foreach (var line in AllLines)
            {
                if (_cancellationTokenSource.Token.IsCancellationRequested)
                    break;

                DisplayedLines.Add(line);
                StateHasChanged();
                await Task.Delay(line.Delay, _cancellationTokenSource.Token);
            }

            AnimationComplete = true;
            
            // Auto-collapse after animation completes
            await Task.Delay(2000, _cancellationTokenSource.Token);
            IsCollapsed = true;
            StateHasChanged();
        }
        catch (TaskCanceledException)
        {
            // Expected when component is disposed
        }
    }

    private void ToggleCollapse()
    {
        IsCollapsed = !IsCollapsed;
    }

    private string GetLineClass(string type)
    {
        return type switch
        {
            "loading" => "terminal-loading",
            "success" => "terminal-success",
            _ => ""
        };
    }

    public async ValueTask DisposeAsync()
    {
        _cancellationTokenSource?.Cancel();
        _cancellationTokenSource?.Dispose();
    }
}

